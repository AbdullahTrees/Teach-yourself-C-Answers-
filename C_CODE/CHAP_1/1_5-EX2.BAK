#include <stdio.h>

int main(void)
{
	char dummyvar;
	float secs_in_day;
	printf("Do you wanna know how many seconds there are in a year? (Y/N)");
	scanf("%c", &dummyvar);

	printf("Of course you do! Why else would you open this?");

	printf("First of all, there's 60 seconds in a minute, and 60 of those in an hour, and 24 of those in a day");

	secs_in_day = 60.0 * 60.0 * 24.0;

	printf("So there's like %f seconds in a day.", secs_in_day);

	printf("And there's 365 days in a year, soooo... %f seconds in a year!", secs_in_day*365.0);
	printf("(Psst we are ignoring leap days, k? See ya.)");

	return 0;

}